<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.callor.mind.dao.ext.UserDao">
	<select id="selectAll" resultType="UserVO">
		SELECT * FROM tbl_user
	</select>
	
	
	<select id="findById" resultType="UserVO">
		SELECT * FROM tbl_user
		WHERE u_id = #{u_id}
	</select>
	
	<select id="findBySeq" resultType="UserVO">
		SELECT * FROM tbl_user
		WHERE u_seq = #{u_seq}
	</select>
	
	
	<select id="findByPw" resultType="UserVO">
		SELECT * FROM tbl_user
		WHERE u_pw = #{u_pw}
	</select>
	<select id="login" resultType="UserVO">
		SELECT * FROM tbl_user
		WHERE u_id = #{u_id}
			AND u_pw = #{u_pw}
		
	</select>
	<insert id="insert" >
	</insert>
	<!-- join -->
	<insert id="insertOrUpdate" parameterType="UserVO">
		INSERT INTO tbl_user (
			u_id, u_pw, u_mail, u_nick, u_level
		)
		VALUES(
			#{u_id}, #{u_pw}, #{u_mail}, #{u_nick}, #{u_level}
		)
	</insert>
	<update id="update" parameterType="UserVO">
		UPDATE tbl_user SET
		u_nick = #{u_nick},
		u_mail = #{u_mail}
		WHERE  u_seq = #{u_seq}
	</update>
	<update id="updatePw" parameterType="UserVO">
		UPDATE tbl_user SET
		u_pw = #{u_pw}
		WHERE u_seq = #{u_seq}
	</update>
	
	<delete id="DELETE">
		DELETE from tbl_user
		WHERE u_seq = #{u_seq}
	</delete>
</mapper>